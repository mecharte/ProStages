{% extends 'base.html.twig' %}

{% block contenu %}
<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <center>
                <h2>Formulaire d'inscription</h2>
            </center>
            <div class="jumbotron">
                {{form_start(vueFormulaireInscription)}}

                <label> <b> Inscription </b>  </label> <br>

                {{form_row(vueFormulaireInscription.prenom, {'attr':{'placeholder':"Yohann...",'required':'true'}})}}
               
                {{form_row(vueFormulaireInscription.nom, {'attr':{'placeholder':"Gourcuff...",'required':'true'}})}}
            
                {{form_row(vueFormulaireInscription.email, {'attr':{'placeholder':"marco@gmail.com ...",'required':'true'}})}}

                {{form_row(vueFormulaireInscription.password, {'attr':{'placeholder':"cneruatdfd456 ...",'required':'true'}})}}

                <center>
                    <button type="submit" class="btn btn-info">S'inscrire</button>
                </center>

                {{form_end(vueFormulaireInscription)}}
            </div>
        </div>
    </div>
</div>
{% endblock %}