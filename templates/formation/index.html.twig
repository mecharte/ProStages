{% extends 'base.html.twig' %}

{% block contenu %}
    <h1>Liste des Formations</h1>

    <table class="table">
        <thead>
            <tr>
                <th>NomLong</th>
                <th>NomCourt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for formation in formations %}
            <tr>
                <td>{{ formation.nomLong }}</td>
                <td>{{ formation.nomCourt }}</td>
                <td>
                     <a href="{{ path('formation_show', {'id': formation.id}) }}"style="color:black; text-decoration:none;"> <i class="icon-mouse-pointer"></i></a>
                    <hr>
                    <a href="{{ path('formation_edit', {'id': formation.id}) }}"style="color:black; text-decoration:none;"><i class="icon-edit"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">pas de formation trouvée</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('formation_new') }}">Créer une nouvelle formation</a>
{% endblock %}
