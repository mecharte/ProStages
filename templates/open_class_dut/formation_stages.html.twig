{% extends 'base.html.twig' %}

{% block contenu %}
<div class="container-fluid">
    <div class="row">
        <div class="col-md-9">
            <table class="table table-dark">
                <thead>
                    <tr>
                        <th scope="col">Stage</th>
                        <th scope="col">Formation</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        {% for stageCourant in stagesParFormation %}
                    <tr>
                        <td>
                                {{stageCourant.titre}}
                        </td>
                        <td>
                            {{stageCourant.nomEntreprise.getNom}}
                        </td>
                        <td>
                                {% for stageParFormationCourant in stageCourant.formations %}

                                        {{stageParFormationCourant.nomCourt}}   
                        </td>
                                {% endfor %}
                        
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
{% endblock %}

