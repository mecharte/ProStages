{% extends 'base.html.twig' %}

{% block menu %}
<h1> Filtration par Entreprise </h1>
{% endblock %}

{% block contenu %}

<table class="table table-striped table-dark">
  <thead>
    <tr>
      <th scope="col">Nom court</th>
      <th scope="col">Nom long</th>
    </tr>
  </thead>
  <tbody>

    {% for formationCourante in controller_formations %}

    <tr>

      <td><a href = "{{ path('formation')}}" style="color:white; text-decoration:none;">
        {{ formationCourante.nomCourt }}
      </a></td>

      <td><a href = "{{ path('formation')}}" style="color:white; text-decoration:none;">
        {{ formationCourante.nomLong }}
      </a></td>


    </tr>

  {% endfor %}
</tbody>
</table>

{% endblock %}