{% extends 'base.html.twig' %}
{% block contenu %}
<table class="table table-dark">
    <thead>
        <tr>
            <th scope="col">Stage</th>
            <th scope="col">Entreprise</th>
            <th scope="col">Site Web</th>
            <th scope="col">Formation</th>
            <th scope="col">Modifier Stage</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            {% for stageCourant in stages %}
        <tr>
            <td>
                <a href="{{path('stages', {id:stageCourant.id})}}" style="color:white; text-decoration:none;">
                    {{stageCourant.titre}}
                </a>
            </td>
            <td>
                <a href="{{path('entreprisesParStage', {nomEntreprise:stageCourant.nomEntreprise.getNom})}}"
                    style="color:white; text-decoration:none;">
                    {{stageCourant.nomEntreprise.getNom}}
                </a>
            </td>
            <td>
                {{stageCourant.nomEntreprise.getSiteWeb}}
            </td>

            <td>
                {% for formationCourante in stageCourant.formations %}
                <a href="{{path('formationParStage', {formations:formationCourante.nomCourt})}}"
                    style="color:white; text-decoration:none;">
                    {{formationCourante.nomCourt}}
                </a>
                {% endfor %}
            </td>
            <td>
            </a>
            <a href="{{path('modifierUnStage', {id:stageCourant.getId})}}"
                style="color:white; text-decoration:none;">
                <center><i class="icon-edit"></i></center>
            </a>
        </td>
        </tr>
        {% endfor %}
    </tbody>
</table>
{% endblock %}