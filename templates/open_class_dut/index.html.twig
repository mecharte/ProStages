{% extends 'base.html.twig' %}
{% block contenu %}
<div class="container-fluid">
    <div class="row">
        <div class="col-md-9">
            <table class="table table-dark">
                <thead>
                    <tr>
                        <th scope="col">Stage</th>
                        <th scope="col">Entreprise</th>
                        <th scope="col">Formation</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        {% for stageCourant in stages %}
                    <tr>
                        <td>
                            <a href="{{path('stages', {id:stageCourant.id})}}" style="color:white; text-decoration:none;">
                                {{stageCourant.titre}}
                            </a>
                        </td>
                        <td>
                                <a href="{{path('entreprisesParStage', {nomEntreprise:stageCourant.nomEntreprise.getNom})}}" style="color:white; text-decoration:none;">
                                        {{stageCourant.nomEntreprise.getNom}}
                                    </a>    
                        </td>

                        <td>
                            {% for formationCourante in stageCourant.formations %}
                            {{formationCourante.nomCourt}}


                            {% endfor %}
                        </td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
{% endblock %}